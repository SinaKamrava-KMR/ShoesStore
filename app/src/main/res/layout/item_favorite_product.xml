<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.mainway.store.view.NikeImageView
        android:id="@+id/nikeImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginVertical="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="8dp" />

    <TextView
        android:id="@+id/ItemProductTitleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        style="?textAppearanceBody1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/nikeImageView"
        app:layout_constraintEnd_toStartOf="@+id/nikeImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nikeImageView"
        tools:text="محصول لیست علاقه مندی ها" />
</androidx.constraintlayout.widget.ConstraintLayout>